const allTechs = [...technologies, ...technologies, ...technologies];
---

<section
    class="py-16 bg-space-900 border-y border-white/5 overflow-hidden relative"
>
    <div class="absolute inset-0 bg-neon-blue/5"></div>

    <!-- Row 1: scrolling left -->
    <div class="flex relative z-10 mb-6">
        <div class="flex animate-marquee whitespace-nowrap">
            {
                allTechs.slice(0, allTechs.length / 2).map((tech) => (
                    <div class="mx-6 flex flex-col items-center gap-2 group cursor-default min-w-[80px]">
                        <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-space-800/80 border border-white/5 group-hover:border-neon-cyan/50 group-hover:bg-space-800 group-hover:shadow-[0_0_15px_rgba(0,243,255,0.15)] transition-all duration-300">
                            <img
                                src={tech.icon}
                                alt={tech.name}
                                width="28"
                                height="28"
                                loading="lazy"
                                class="opacity-60 group-hover:opacity-100 transition-opacity duration-300"
                            />
                        </div>
                        <span class="text-[10px] font-mono text-gray-600 group-hover:text-neon-cyan uppercase tracking-wider transition-colors duration-300">
                            {tech.name}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>

    <!-- Row 2: scrolling right -->
    <div class="flex relative z-10">
        <div class="flex animate-marquee-reverse whitespace-nowrap">
            {
                allTechs.slice(allTechs.length / 2).map((tech) => (
                    <div class="mx-6 flex flex-col items-center gap-2 group cursor-default min-w-[80px]">
                        <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-space-800/80 border border-white/5 group-hover:border-neon-cyan/50 group-hover:bg-space-800 group-hover:shadow-[0_0_15px_rgba(0,243,255,0.15)] transition-all duration-300">
                            <img
                                src={tech.icon}
                                alt={tech.name}
                                width="28"
                                height="28"
                                loading="lazy"
                                class="opacity-60 group-hover:opacity-100 transition-opacity duration-300"
                            />
                        </div>
                        <span class="text-[10px] font-mono text-gray-600 group-hover:text-neon-cyan uppercase tracking-wider transition-colors duration-300">
                            {tech.name}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    @keyframes marquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-33.33%);
        }
    }
    @keyframes marquee-reverse {
        0% {
            transform: translateX(-33.33%);
        }
        100% {
            transform: translateX(0);
        }
    }
    .animate-marquee {
        animation: marquee 40s linear infinite;
    }
    .animate-marquee-reverse {
        animation: marquee-reverse 40s linear infinite;
    }
</style>
