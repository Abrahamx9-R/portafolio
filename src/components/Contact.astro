---
import SectionContainer from "./SectionContainer.astro";
import { t } from "../i18n/translations";
import type { Lang } from "../i18n/translations";

interface Props {
    lang?: Lang;
}

const { lang = "es" } = Astro.props;
---

<SectionContainer id="contact" class="bg-space-900 relative overflow-hidden">
    <!-- Background element -->
    <div
        class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-lcars-primary/10 to-transparent pointer-events-none"
    >
    </div>

    <div class="flex flex-col md:flex-row gap-12 relative z-10">
        <div class="w-full md:w-1/2">
            <h2
                class="text-4xl md:text-5xl font-heading font-bold text-white mb-6"
            >
                {t(lang, "contact.title.1")}
                <span class="text-neon-cyan">{t(lang, "contact.title.2")}</span>
            </h2>
            <p class="text-gray-400 text-lg mb-8 leading-relaxed">
                {t(lang, "contact.description")}
            </p>

            <div class="flex gap-4">
                <a
                    href="mailto:abrahamgalindorx9@gmail.com"
                    class="flex items-center gap-3 text-white hover:text-neon-cyan transition-colors group"
                >
                    <div
                        class="p-3 bg-space-800 border border-white/10 rounded group-hover:border-neon-cyan"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect><path
                                d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path></svg
                        >
                    </div>
                    <span class="font-mono text-sm tracking-wider"
                        >abrahamgalindorx9@gmail.com</span
                    >
                </a>
                <a
                    href="https://github.com/Abrahamx9-R"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 text-white hover:text-lcars-tertiary transition-colors group"
                >
                    <div
                        class="p-3 bg-space-800 border border-white/10 rounded group-hover:border-lcars-tertiary"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                        >
                    </div>
                    <span class="font-mono text-sm tracking-wider"
                        >Abrahamx9-R</span
                    >
                </a>
            </div>
        </div>

        <form class="w-full md:w-1/2 space-y-6">
            <div class="group relative">
                <input
                    type="text"
                    placeholder={t(lang, "contact.input.name")}
                    class="w-full bg-space-800/50 border-b-2 border-gray-700 text-white p-4 focus:outline-none focus:border-neon-cyan transition-colors placeholder-gray-600 font-mono"
                />
                <div
                    class="absolute bottom-0 left-0 w-0 h-[2px] bg-neon-cyan transition-all duration-300 group-focus-within:w-full"
                >
                </div>
            </div>

            <div class="group relative">
                <input
                    type="email"
                    placeholder={t(lang, "contact.input.email")}
                    class="w-full bg-space-800/50 border-b-2 border-gray-700 text-white p-4 focus:outline-none focus:border-neon-cyan transition-colors placeholder-gray-600 font-mono"
                />
                <div
                    class="absolute bottom-0 left-0 w-0 h-[2px] bg-neon-cyan transition-all duration-300 group-focus-within:w-full"
                >
                </div>
            </div>

            <div class="group relative">
                <textarea
                    rows="4"
                    placeholder={t(lang, "contact.input.message")}
                    class="w-full bg-space-800/50 border-b-2 border-gray-700 text-white p-4 focus:outline-none focus:border-neon-cyan transition-colors placeholder-gray-600 font-mono resize-none"
                ></textarea>
                <div
                    class="absolute bottom-0 left-0 w-0 h-[2px] bg-neon-cyan transition-all duration-300 group-focus-within:w-full"
                >
                </div>
            </div>

            <button
                type="submit"
                class="w-full py-4 bg-neon-cyan/10 border border-neon-cyan text-neon-cyan font-heading font-bold uppercase tracking-widest hover:bg-neon-cyan hover:text-space-900 transition-all duration-300"
            >
                {t(lang, "contact.submit")}
            </button>
        </form>
    </div>
</SectionContainer>
