---
import SectionContainer from "./SectionContainer.astro";
import { t } from "../i18n/translations";
import type { Lang } from "../i18n/translations";

interface Props {
    lang?: Lang;
}

const { lang = "es" } = Astro.props;

const skills = [
    { name: "Project Management", level: 90 },
    { name: "Full Stack Development", level: 90 },
    { name: "DevOps & Linux", level: 85 },
    { name: "Data Analysis & ML", level: 80 },
    { name: "IoT & Mecatr√≥nica", level: 75 },
];
---

<SectionContainer id="about" class="bg-space-800/20">
    <div class="flex flex-col md:flex-row gap-12 items-center">
        <!-- Profile / Bio Image Area -->
        <div class="w-full md:w-1/3 relative group">
            <div
                class="aspect-square bg-space-900 rounded-2xl overflow-hidden border border-lcars-primary/50 relative"
            >
                <!-- Placeholder for profile image -->
                <div
                    class="absolute inset-0 flex items-center justify-center text-lcars-primary font-mono"
                >
                    [OFFICER_IMAGE]
                </div>

                <!-- LCARS decorative overlay -->
                <div
                    class="absolute top-0 left-0 w-8 h-full border-r border-lcars-light/20 bg-lcars-primary/10"
                >
                </div>
                <div
                    class="absolute bottom-4 right-4 text-xs font-mono text-neon-cyan"
                >
                    {t(lang, "about.badge")}
                </div>
            </div>
            <!-- Decorative circle -->
            <div
                class="absolute -bottom-6 -right-6 w-24 h-24 border-2 border-dashed border-neon-cyan rounded-full animate-spin-slow opacity-30"
            >
            </div>
        </div>

        <!-- Content -->
        <div class="w-full md:w-2/3 space-y-8">
            <h2 class="text-4xl font-heading font-bold text-white">
                <span class="text-lcars-primary">///</span>
                {t(lang, "about.title")}
            </h2>

            <p
                class="text-lg text-gray-300 font-body leading-relaxed border-l-2 border-lcars-light pl-6"
            >
                {t(lang, "about.bio")}
            </p>

            <!-- Skills Visualization -->
            <div class="space-y-4 pt-4">
                <h3
                    class="font-mono text-sm text-neon-cyan tracking-widest uppercase"
                >
                    {t(lang, "about.skills.title")}
                </h3>
                {
                    skills.map((skill) => (
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-sm font-mono text-gray-400">
                                    {skill.name}
                                </span>
                                <span class="text-sm font-mono text-neon-cyan">
                                    {skill.level}%
                                </span>
                            </div>
                            <div class="h-2 bg-space-900 rounded-full overflow-hidden border border-white/5">
                                <div
                                    class="h-full bg-gradient-to-r from-lcars-primary to-neon-cyan"
                                    style={`width: ${skill.level}%`}
                                />
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</SectionContainer>
